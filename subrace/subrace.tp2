BEGIN @1000001 /* Change subrace colors (Hair and Skin) */
DESIGNATED 100
LABEL ~zz-zd-zs-subrace-hair-and-skin~
SUBCOMPONENT @1000000 /* Subrace mod for Baldur's Gate Enhanced Edition (BG1, BG:SoD, BG2, EET) */
GROUP @1000005 /* Subraces for Baldur's Gate Enhanced Edition (BG1, BG:SoD, BG2, EET) */
REQUIRE_PREDICATE GAME_IS ~bgee bg2ee eet iwdee~ @1100000 /* This component is not compatible with your game */
FORBID_COMPONENT "dw_talents/dw_talents.tp2" 20000 @1100001 /* This component is not compatible with ToF New races and subraces */

OUTER_SET sr_colors = 1

INCLUDE ~subrace/lib/subrace.tph~

